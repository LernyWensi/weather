{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],

        "module": "ESNext",
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "verbatimModuleSyntax": true,

        "strict": true,
        "noFallthroughCasesInSwitch": true,

        "skipLibCheck": true,
        "noEmit": true
    },
    "include": ["src/**/*.ts"]
}
